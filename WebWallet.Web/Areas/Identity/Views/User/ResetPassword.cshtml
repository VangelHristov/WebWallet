@{
    Layout = "_Layout";
    ViewData["title"] = "Нова парола";
}

@model ResetPasswordVM;
<div class="login-area">
    <div class="container">
        <div class="login-box ptb--100">
            <form asp-action="ResetPassword" method="post">
                <div class="login-form-head">
                    <h4>Смени паролата си</h4>
                </div>
                <div class="login-form-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-gp">
                        <label asp-for="Password"></label>
                        <input asp-for="Password">
                        <i class="ti-lock"></i>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-gp">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword">
                        <i class="ti-lock"></i>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <input type="hidden" name="Token" value="@ViewData["passwordResetToken"]" />
                    <input type="hidden" name="UserId" value="@ViewData["userId"]" />
                    <div class="submit-btn-area mt-5">
                        <button id="form_submit" type="submit">Потвърди<i class="ti-arrow-right"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{ <partial name="_ValidationScriptsPartial" /> }