@{
    Layout = "_Layout";
    ViewData["title"] = "Моите Средства";
}
@model IEnumerable<AccountVM>
@using System.Reflection;
@using System.Collections.Generic;
@using System.ComponentModel.DataAnnotations;

<div class="single-table">
    <div class="table-responsive">
        <table class="table text-center">
            <thead class="text-uppercase bg-info">
                <tr class="text-white">
                    <th scope="col">#</th>
                    <th scope="col">Име</th>
                    <th scope="col">Баланс</th>
                    <th scope="col">Тип</th>
                    <th scope="col">Действие</th>
                </tr>
            </thead>
            <tbody>
                @{ var counter = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Name</td>
                        <td>@item.Balance лв.</td>
                        <td>@Html.DisplayFor(x => item.Type)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class=""><i class="ti-pencil-alt"></i> Обнови</a>
                            &nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
                            <a asp-action="Delete" asp-route-id="@item.Id" class=""><i class="ti-trash"></i> Изтрий</a>

                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>