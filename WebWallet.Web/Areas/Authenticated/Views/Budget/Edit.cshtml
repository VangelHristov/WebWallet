@model BudgetVM
@{
    Layout = "_Layout";
    ViewData["title"] = "Обнови Бюджет";
}

<div class="row">
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Обнови бюджет</h4>
                <form asp-action="Edit" asp-route-accountId="@Model.Id" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Limit"></label>
                        <input asp-for="Limit" class="form-control" />
                        <span asp-validation-for="Limit" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PeriodString"></label>
                        <select class="form-control" asp-for="PeriodString" asp-items="@(new SelectList(Model.Periods))"></select>
                        <span asp-validation-for="PeriodString" class="text-danger"></span>
                    </div>
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Обнови</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ <partial name="_ValidationScriptsPartial" />}