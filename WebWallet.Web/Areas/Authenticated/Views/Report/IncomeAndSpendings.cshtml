@{
    Layout = "_Layout";
    ViewData["title"] = "Репорт";
}

<div class="row">
    <div class="col-lg-12 mt-5">
        <div class="card-header text-center"><b>Приходи и Разходи</b></div>
        <div class="card">
            <div class="card-body">
                <div id="incomeVsExpence" class="charts">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 mt-5">
        <div class="card-header text-center"><b>Приходи и Инвестиции</b></div>
        <div class="card">
            <div class="card-body">
                <div id="investedVsIncome" class="charts">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mt-5">
        <div class="card">
            <div class="card-header text-center"><b>Разходи за текущия месец</b></div>
            <div class="card-body">
                <div id="spendingsPerCategoryCurrentMonth" class="charts">
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mt-5">
        <div class="card-header text-center"><b>Разходи за всички месеци</b></div>
        <div class="card">
            <div class="card-body">
                <div id="spendingsPerCategoryAllTime" class="charts">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_DashboardCharts" />
}