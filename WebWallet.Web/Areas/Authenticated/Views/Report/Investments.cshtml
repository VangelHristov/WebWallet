@{
    Layout = "_Layout";
    ViewData["title"] = "Репорт Инвестиции";
}
<div class="single-table d-none d-md-block">
    <div class="table-responsive">
        <table class="table text-center">
            <thead class="text-uppercase bg-info">
                <tr class="text-white">
                    <th scope="col">#</th>
                    <th scope="col">Наименование</th>
                    <th scope="col">Код</th>
                    <th scope="col">Лева</th>
                    <th scope="col">Обратен Курс За Един Лев</th>
                </tr>
            </thead>
            <tbody id="currencies"></tbody>
        </table>
    </div>
</div>

<div class="single-table d-none d-md-block">
    <div class="table-responsive">
        <table class="table text-center">
            <thead class="text-uppercase bg-info">
                <tr class="text-white">
                    <th scope="col">#</th>
                    <th scope="col">Наименование</th>
                    <th scope="col">Код</th>
                    <th scope="col">Bitcoin</th>
                    <th scope="col">USD</th>
                    <th scope="col">EUR</th>
                </tr>
            </thead>
            <tbody id="crypto"></tbody>
        </table>
    </div>
</div>

<div class="single-table d-none d-md-block">
    <div class="table-responsive" id="userStocks">
    </div>
</div>

<div class="single-table d-none d-md-block">
    <div class="table-responsive" id="cryptoExchangeRates">
    </div>
</div>

@section Scripts{
    <partial name="_InvestmentsCharts" />
}